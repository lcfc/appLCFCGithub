<?xml version='1.0' encoding='utf-8'?>
<widget id="it.lcfc.app" version="1.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>LCFC</name>
    <description>
      Applicazione ufficiale della Lega Calcio Friuli Collinare
    </description>
    <author email="informatica@lcfc.it" href="http://www.lcfc.it">
        Paolo Cantoni, Francesco Gentili
    </author>
    <access origin="*" />
    <content src="index.html" />

		<gap:plugin name="com.adobe.plugins.GAPlugin" version="2.3.1" />
		<gap:plugin name="org.apache.cordova.device"/>
		<gap:plugin name="com.phonegap.plugin.statusbar" />

		<feature name="http://api.phonegap.com/1.0/device" />
		<preference name="phonegap-version" value="3.5.0" />


		<preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-installLocation" value="auto" />

		<preference name="StatusBarOverlaysWebView" value="false" />
		<preference name="StatusBarBackgroundColor" value="#0093ea" />

		<icon src="icon.png" />
		<gap:splash src="res/screen/ios/Default-568h@2x~iphone.png" gap:platform="ios" width="640" height="1136" />

</widget>
